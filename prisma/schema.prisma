// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("HEROKU_POSTGRESQL_TEAL_URL")
}

model Posts {
  id        String   @id @default(uuid())
  title     String
  image     String?
  autor     String
  text      String
  likes     Int?     @default(0)
  views     Int?     @default(0)
  createdAt DateTime @default(now())
}

model Coments {
  id        String  @id @default(uuid())
  post_id   String
  coments   String
  user_name String?
}
